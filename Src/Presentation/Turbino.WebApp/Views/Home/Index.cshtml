@{
    @model Turbino.Application.Home.Queries.GetIndex.IndexHolderViewModel
    ViewData["Title"] = "Home Page";
}

<section id="sectioncarousel">
    <div id="carouselExampleIndicators" class="carousel carousel-home2  slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner " role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="assets/images/girls-beach.jpg" alt="First slide">
                <div class="carousel-caption justify-content-center  mb-lg-4 mb-0 align-items-center text-center">
                    <div class="toggleCaption">
                        <h1 class="white shadow-text  align-middle">Thailand</h1>
                    </div>
                    <div class="toggleButton">
                        <h4 class="white shadow-text align-middle">Get to know the best of Thailand</h4>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="assets/images/bigcarousel.jpg" alt="Second slide">
                <div class="carousel-caption justify-content-center  mb-lg-4 mb-0 align-items-center text-center">
                    <div class="toggleCaption">
                        <h1 class="white shadow-text  align-middle">California</h1>
                    </div>
                    <div class="toggleButton">
                        <h4 class="white shadow-text align-middle">Meet Santa Monica Beach</h4>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="assets/images/male-tourist.jpg" alt="Third slide">
                <div class="carousel-caption justify-content-center  mb-lg-4 mb-0 align-items-center text-center">
                    <div class="toggleCaption">
                        <h1 class="white shadow-text align-middle">Norway</h1>
                    </div>
                    <div class="toggleButton">
                        <h4 class="white shadow-text align-middle">Adventure for outdoorsy travelers</h4>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <div class="chapter2">
            <img class="curve2 d-none d-xl-block" src="assets/svgs/curve.svg" alt="">
        </div>
    </div>
</section>
<!-- End section Slider -->
<!-- Section 3 Search Tours-->
<section id="section3">
    <div class="container formhome2 text-center justify-content-center align-items-center pb-4">
        <h4 class="black mx-2 mb-3 mt-0 pt-4 text-center bold  d-block">Find the place it suits you best</h4>
        <form asp-antiforgery="true" asp-controller="Tour" asp-action="Filter" method="get" class="form-inline text-center justify-content-center align-items-center pb-0">
            <input asp-for="@Model.TourName" type="text" class="form-control-inline2 form-control mb-2 mr-lg-2 mx-md-0 mx-4 py-2" id="inlineFormInputName1" placeholder="Search Tours">
            <span class="fas fa-search iconform"></span>

            <select asp-for="@Model.Month" class="mb-2 mr-lg-2 mx-4 mx-md-0 form-control form-control-inline2" id="inlineFormInputName2">
                <option selected>Any month</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="Octuber">Octuber</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>
            <span class="fas fa-calendar iconform"></span>

            <select asp-for="@Model.TourType" class=" mb-2 mr-lg-2 mx-4 mx-md-0 form-control form-control-inline2" id="inlineFormInputName3">
                <option selected>Tour Type</option>
                <option value="1">Romantic</option>
                <option value="2">Adventure</option>
                <option value="3">Vacation</option>
                <option value="3">Explore</option>
            </select>
            <span class="fas fa-chevron-down iconform"></span>

            <button type="submit" class="btn btn-primary mb-2 mx-4 mx-md-0 mr-lg-2 py-2 form-control-inline3">Search</button>

        </form>
    </div>
</section>

<section id="section-masonry">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h3 class="black front bold text-center">Popular Destinations</h3>
                    <div class="separator text-center svgcenter"></div>
                    <h5 class="primary-color text-center mb-5 ">Check out some of our most popular destinations down here! </h5>
                </div>

                <div class="gal">
                    @for (int i = 0; i < Model.Destinations.Destinations.Count; i++)
                    {
                        if (i == 4)
                        {
                            <div class="masonry-full  mb-3">
                                <div class="masonry-hover">
                                    <div class="masonry-item">
                                        <img class="masonry-image" src="@Model.Destinations.Destinations[i].ImgUrl" alt="">
                                        <div class="masonry-info text-center front">
                                            <h6 class="white shadow-text front">@Model.Destinations.Destinations[i].Name</h6>
                                            <a asp-controller="Destination" 
                                               asp-action="Inquire" 
                                               asp-route-destinationId="@Model.Destinations.Destinations[i].Id"
                                               class="btn btn-outline-light px-3 front" role="button">SEE MORE</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (i == 5)
                        {
                            <div class="masonry-full">
                                <div class="masonry-hover">
                                    <div class="masonry-item">
                                        <img class="masonry-image" src="@Model.Destinations.Destinations[i].ImgUrl" alt="">
                                        <div class="masonry-info text-center front">
                                            <h6 class="white shadow-text front">@Model.Destinations.Destinations[i].Name</h6>
                                            <a asp-controller="Destination" 
                                               asp-action="Inquire" 
                                               asp-route-destinationId="@Model.Destinations.Destinations[i].Id"
                                               class="btn btn-outline-light px-3 front" role="button">SEE MORE</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="masonry-full mb-3">
                                <div class="masonry-hover">
                                    <div class="masonry-item">
                                        <img class="masonry-image" src="@Model.Destinations.Destinations[i].ImgUrl" alt="">
                                        <div class="masonry-info text-center front">
                                            <h6 class="white front">@Model.Destinations.Destinations[i].Name</h6>
                                            <a asp-controller="Destination" 
                                               asp-action="Inquire" 
                                               asp-route-destinationId="@Model.Destinations.Destinations[i].Id"
                                               class="btn btn-outline-light px-3 front" role="button">SEE MORE</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section><!-- End section 3 tours-->

<section id="section4">
    <img class="curve3" src="assets/svgs/curve2.svg" alt="">

    <div class="content tours-homepage">
        <div class="container">
            <div class="text-center">
                <h3 class="black front bold text-center">Popular Tours to discover</h3>
                <div class="separator text-center svgcenter"></div>
                <h5 class="primary-color text-center mb-5">Travel with Turbino and have fun! </h5>
            </div>
            <div class="row">
                @foreach (var tour in Model.TourViewModel.Tours)
                {
                    <div class="col-xs-12 col-md-6 col-lg-4 mb-4">
                        <div class="card ">
                            <small class="white front"><span class="far fa-clock mr-2 white"></span><strong>9</strong><br>days</small>
                            <a class="img-card" asp-controller="Tour" asp-action="Inquire" asp-route-tourId="@tour.Id">
                                <img src="@tour.ImgUrl" alt="" />
                            </a>
                            <div class="card-content">
                                <div>
                                    <a class="btn btn-primary px-3 btn-sm float-left" href="#" role="button">@tour.Type</a>
                                </div>
                                <h6 class="primary-color text-right">$3300</h6>
                                <h6 class="black"><a href="#" target="_blank">@tour.Name</a></h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <img class="curve2" src="assets/svgs/curve.svg" alt="">

</section>


