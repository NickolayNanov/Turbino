<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home - Turbino</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="assets/images/favicon.png">

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Seo meta tags for Search Engine Optimization -->
    <meta name="author" content="Turbino template">
    <meta name="description" content="Travel agency template for all types of tour agencies, travel bloggers, boostrap 4 based template">
    <meta name="keywords" content="Turbino, Turbino, travel agency, themeforest tour agency, travel, adventure, destinations,">

    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/popper.min.js"></script>

    <!-- Aditional scripts -->
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/smooth-scroll.min.js"></script>
    <script src="js/instafeed.min.js"></script>
    <script src="js/ofi.js"></script>

    <!-- Main scripts -->
    <script src="js/main.js"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <link rel="stylesheet" href="css/font-awesome-animation.min.css">
    <link rel="stylesheet" href="css/magnific-popup.css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
</head>

<body class="home home2">
    @using Microsoft.AspNetCore.Identity
    @using Turbino.Domain.Entities

    @inject SignInManager<TurbinoUser> SignInManager
    @inject UserManager<TurbinoUser> UserManager
    <header>

        <div id="wrapper-navbar">
            <nav id="top" class="navbar py-3 fixed-top navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand ml-sm-5" asp-controller="Home" asp-action="Index"><img src="../assets/images/logo.png" alt="image"></a>
                <button class="navbar-toggler collapsed navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar top-bar"></span>
                    <span class="icon-bar middle-bar"></span>
                    <span class="icon-bar bottom-bar"></span>
                    <span class="sr-only">Toggle navigation</span>
                </button>
                <div class="collapse navbar-collapse ml-auto" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="nav-link mr-3 open my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown1" role="button" aria-haspopup="true" aria-expanded="false">
                                Home
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Destination" asp-action="Index" class="nav-link mr-3 open my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown2" role="button" aria-haspopup="true" aria-expanded="false">
                                Destinations
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a asp-controller="Tour" asp-action="Index" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                Tours
                            </a>
                        </li>
                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a asp-controller="Authentication" asp-action="Login" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a asp-controller="Authentication" asp-action="Register" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                    Register
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a asp-controller="Reservation" asp-action="Index" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                    My Reservations
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a asp-controller="Home" asp-action="Profile" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                    Hello, @this.User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a asp-controller="Authentication" asp-action="Logout" class="nav-link mr-3 my-lg-0 my-2 ml-lg-0 ml-3" id="navbarDropdown3" role="button" aria-haspopup="true" aria-expanded="false">
                                    Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>

    </header>

    <!-- End section 1-->
    <main>
        @this.RenderBody();
    </main>


    <!-- Footer -->

    <footer>
        <section id="footer">

            <div class="container">

                <div class="row text-center text-xs-center text-sm-left text-md-left">

                    <!-- Contact Information -->
                    <div class="col-xs-12 col-md-6 col-lg-4">

                        <h6 class="white mt-4">Contact Us</h6>

                        <ul class="list-unstyled quick-links">
                            <li><h5><i class="fas fa-map-marker-alt mr-2"></i>3rd block, Veliko Tarnovo</h5></li>
                            <li><h5><i class="fas fa-phone-square mr-2"></i>Bulgaria (+359) 111111111</h5></li>
                            <li><h5><i class="fas fa-envelope mr-2"></i>nickolaynanov17@gmail.com</h5></li>
                        </ul>
                    </div>

                    <!-- Social Networks -->
                    <div class="col-xs-12 col-md-6 col-lg-4">

                        <img class="svgcenter mt-4 logo-light" src="assets/svgs/logolight.svg" alt="">

                        <ul class="list-unstyled list-inline mt-3 social text-center">
                            <li class="list-inline-item"><a href="http://www.facebook.com"><i class="fab fa-facebook-f"></i></a></li>
                            <li class="list-inline-item"><a href="http://www.twitter.com"><i class="fab fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="http://www.instagram.com"><i class="fab fa-instagram"></i></a></li>
                        </ul>

                        <ul class="list-unstyled text-center quick-links mt-3">
                            <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-angle-double-right"></i>Home</a></li>
                            <li><a asp-controller="Tour" asp-action="Index"><i class="fa fa-angle-double-right"></i>See our Tours</a></li>
                            <li><a asp-controller="Home" asp-action="AboutUs"><i class="fa fa-angle-double-right"></i>About Us</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUs"><i class="fa fa-angle-double-right"></i>Contacts Us</a></li>
                        </ul>

                    </div>

                </div>
                <!-- GO UP rectangle -->
                <div class="scale-up">
                    <a class="smooth-scroll  rectangle-right" href="#">
                        <div class="go-up px-1">
                            <i class="fas mb-2 fa-arrow-up"></i><br>
                            <h6 class="text-center letters-up">GO<br>UP</h6>
                        </div>
                    </a>
                </div>

                <!-- Copyright Info-->
                <div class="row">
                    <div class="col-12 mt-2 mt-sm-2 text-center text-white">
                        <div class="separatorfullwidth"></div>
                        <p class="white footer-bottom">© Copyright Turbino</a></p>
                    </div>
                </div>
            </div>

        </section>

    </footer>

</body>
</html>
