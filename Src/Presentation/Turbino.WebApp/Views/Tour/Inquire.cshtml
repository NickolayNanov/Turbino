@{
    ViewData["Title"] = "Index";
    @model Turbino.Application.Tours.Queries.SelectById.TourViewModel
}
<div class="tour-title">
    <img class="w-100 h-100" src="../assets/images/amsterdamtitle.jpg" alt="">
    <h1 class="white text-center shadow-text center-text">Amsterdam with love</h1>

    <div>
        <a class="smooth-scroll" href="#read-tour">
            <img class="curvechevron" src="../assets/svgs/curvesingle.svg" alt="">
            <div class="chevroncurve">
                <i class="fas  hoverchevron white fa-chevron-down"></i>
            </div>
        </a>
    </div>
</div>
<!-- End section 1-->

<section id="section3" class="tour-list-sidebar tour-list-sidebar-2-col">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-3 ml-lg-5 ml-sm-3 order-lg-first order-last mt-3 mt-lg-0">

                <div class="form-container px-3 py-3">

                    <h4 class="black bold mt-3 px-4 pb-2 text-center">Book this tour</h4>

                    <form asp-controller="Tour"
                          asp-action="Book"
                          method="post"
                          asp-route-tourId="@Model.Id"
                          asp-route-arrivalDate="@Model.ArrivalDate"
                          asp-route-dateOfLeaving="@Model.DateOfLeaving"
                          asp-route-reserverName="@Model.ReserverName"
                          id="sidebar-form" class="px-xl-3 px-lg-3 px-3">

                        <div class="form-group text-center">
                            <label class="" for="inputname">Sir/Madam</label>
                            <input asp-for="@Model.ReserverName" type="text" class="form-control" id="inputname" placeholder="John Doe">
                        </div>

                        <div class="form-group text-center departure">
                            <label class="" for="datepicker">Departure Date</label>
                            <div class="input-group">
                                <input asp-for="@Model.ArrivalDate" type="date" id="datepicker" placeholder="Choose your Date" class="form-control">
                                @*<div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-calendar"></i> </div>
                    </div>*@
                            </div>
                        </div>

                        <div class="form-group text-center departure">
                            <label class="" for="datepicker">Date of Leaving</label>
                            <div class="input-group">
                                <input asp-for="@Model.DateOfLeaving" type="date" id="datepicker" placeholder="Choose your Date of leaving" class="form-control">
                                @*<div class="input-group-append">
                        <div class="input-group-text"><i class="fas fa-calendar"></i> </div>
                    </div>*@
                            </div>

                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button type="submit" class="btn col-sm-12 my-2 btn-primary">Book Now</button>
                            </div>
                        </div>
                    </form>
                    @if (ViewData["Error"] != null)
                    {
                        @foreach (var error in (string[])ViewData["Error"])
                        {
                            <p class="text-danger">@error</p>
                        }
                    }
                </div>

                <div class="more-info mx-auto my-4">
                    <h6 class="black semibold text-center mx-4 mt-3 mb-3 info-title">Quick Contact</h6>
                    <div class="pb-2">

                        <a href="tel:+133331111"><h5 class="grey text-center tel-info"><i class="fas primary-color fa-phone faa-tada animated mr-2 grey my-lg-0 mb-1"></i>(+1) 3333.1111</h5></a>
                        <a href="mailto:hello@ourcompany.com"><h5 class="grey text-center mail-info"><i class="fas fa-envelope faa-horizontal animated primary-color mr-2"></i>hello@ourcompany.com</h5></a>
                    </div>
                </div>

                <a href="#"><img src="assets/images/promotion.jpg" class="w-100 img-fluid mx-auto d-block mt-4" alt=""></a>
            </div>

            <div class="col-xs-12 col-md-12 col-lg-8   single-tour">
                <h4 id="read-tour" class="black text-left mb-3  bold">@Model.Name</h4>

                <div class="row">

                    <div class="col-lg-3 col-sm-4 col-12 text-left">
                        <h6 class="primary-color semibold price-big">$@Model.PricePerPerson<span class="semibold subtitle">&nbsp;/ Per Person</span> </h6>
                    </div>

                    <div class="col-sm-6 col-12 text-left ml-sm-0">
                        <div class=" ml-0 mt-1">
                            <a class="btn btn-primary px-3  text-left mr-1 mb-1 btn-sm" href="#" role="button">Europe</a>
                            <a class="btn btn-primary px-3 mx-1 text-left mx-2 mb-1 btn-sm" href="#" role="button">travel</a>
                        </div>
                    </div>

                </div>

                <div class="separator-tour"></div>

                <div class="row">
                    <div class="col-lg-3 col-6 order-1 order-lg-1">
                        <img class="svgcenter mb-2 age-icon" src="assets/svgs/age.svg" alt="">
                    </div>
                    <div class="col-lg-3 col-6 order-2 order-lg-2">
                        <img class="svgcenter mt-2 mb-2 duration-icon" src="assets/svgs/duration.svg" alt="">
                    </div>
                    <div class="col-lg-3 col-6 order-5 order-lg-3">
                        <img class="svgcenter mb-2 location-icon" src="assets/svgs/location.svg" alt="">
                    </div>
                    <div class="col-lg-3 col-6 order-6 order-lg-4">
                        <img class="svgcenter mt-3 mb-2 calendar-icon" src="assets/svgs/calendar.svg" alt="">
                    </div>
                    <div class="col-lg-3 col-6 order-3 order-lg-5">
                        <p class="grey text-center">Age<br><span class="black bold">+@Model.RequiredAge</span></p>
                    </div>
                    <div class="col-lg-3 col-6 order-4 order-lg-6">
                        <p class="grey text-center">Duration<br><span class="black bold">@Model.Duration Days</span></p>
                    </div>
                    <div class="col-lg-3 col-6 order-7 order-lg-7">
                        <p class="grey text-center">Location<br><span class="black bold">@Model.Location</span></p>
                    </div>
                    <div class="col-lg-3 col-6 order-8 order-lg-8">
                        <p class="grey text-center mx-2">Dates<br><span class="black bold">@Model.Dates</span></p>
                    </div>
                </div>

                <div class="separator-tour"></div>

                <ul class="single-tour-container">
                    <li>
                        <div class="tour-item-title list-font">Departure</div>
                        <div class="tour-item-description list-font">@Model.Departure</div>
                    </li>

                    <li>
                        <div class="tour-item-title list-font">Next Departure</div>
                        <div class="tour-item-description list-font">@Model.NextDeparture</div>
                    </li>

                    <li>
                        <div class="tour-item-title list-font">Accommodation</div>
                        <div class="tour-item-description list-font">@Model.Accommodation</div>
                    </li>

                    <li>
                        <div class="tour-item-title list-font">What´s Included </div>
                        <div class="tour-item-description list-font">
                            @foreach (var included in Model.Included)
                            {
                                <div><i class="fas fa-check-circle"></i>@included</div>
                            }
                        </div>
                    </li>

                    <li>
                        <div class="tour-item-title list-font">Not Included</div>
                        <div class="tour-item-description list-font">
                            @foreach (var notIncluded in Model.NotIncluded)
                            {
                                <div><i class="fas fa-times-circle"></i>@notIncluded</div>
                            }
                        </div>
                    </li>
                </ul>
                
                @Html.Raw(Model.Description)

                <div class="comments-container">
                    <h6 class="bold mt-5 black">Tour Reviews </h6>

                    <ul id="comments-list" class="comments-list">
                        @foreach (var review in Model.Reviews.Reviews)
	                    {
                            <li>
                                <div class="comment-main-level mb-4">

                                    <div class="comment-box">
                                        <div class="comment-head">
                                            <h6 class="comment-name "><a href="#">@review.AuthorName</a></h6>
                                            <div class="text-left">
                                                @for (int i = 0; i < review.Rating; i++)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }   
                                                <br class="hidebr">
                                                <span class="time-review">@review.TimeAgo</span>
                                            </div>

                                        </div>
                                        <div class="comment-content">
                                            @review.Content
                                        </div>
                                    </div>
                                </div>
                            </li> 
	                    }
                    </ul>
                </div>
              
                <div class="mt-5  mx-auto my-auto">
                    <h6 class="black bold mt-5 ml-md-0 ml-4 text-center">Leave a Review</h6>
                    <form asp-controller="Tour" asp-action="CreateReview" asp-antiforgery="true" asp-route-tourId="@Model.Id" class="form-comment ratings pt-2 ">
                        
                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <label for="inlineFormInputName32">Rating</label>

                                <div class="input-group">
                                    <select asp-for="@Model.Rating" class="form-control" id="inlineFormInputName32">
                                        <option value="VeryGood" selected>4 Stars (Very Good)</option>
                                        <option value="Bad">1 Star (Bad)</option>
                                        <option value="Normal">2 Stars</option>
                                        <option value="Regular">3 Stars (Regular)</option>
                                        <option value="Superb">5 Stars (Superb)</option>
                                    </select>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row mt-3">
                            <div class="col-12 ">
                                <div class="form-group text-center">
                                    <label for="exampleFormControlTextarea1">Additional comments</label>
                                    <textarea asp-for="@Model.Content" class="form-control" placeholder="Write a detailed review..." id="exampleFormControlTextarea1" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 offset-lg-3 col-12">
                                <button type="submit" class="btn col-sm-12 my-2 btn-primary mb-lg-0 mb-4">Submit review</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>

        </div>

    </div>

</section>

<!-- Bootstrap and Jquery scripts -->
